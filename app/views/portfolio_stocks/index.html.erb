<h1>Portfolio Stocks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_stocks.each do |portfolio_stock| %>
      <tr>
        <td><%= link_to 'Show', portfolio_stock %></td>
        <td><%= link_to 'Edit', edit_portfolio_stock_path(portfolio_stock) %></td>
        <td><%= link_to 'Destroy', portfolio_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

